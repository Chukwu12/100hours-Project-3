<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= type %> Recipes</title>
    <!-- Font-awesome -->
    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
   
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/styles.css"> 
</head>
<body>
    <header id="main-nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-light bg-light">
                <a class="navbar-brand" href="/" aria-label="Homepage">
                    <img src="/image/onice-logo.png" alt="Onice Logo" height="30">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/recipe">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    

    <header id="second-nav">
        <nav id="cuisenes">
            <div class="cuisenes">
                <div class="cuisnes-list">
                    <div>
                        <h2>African</h2>
                        <a href="/cuisine/african"><img src="/image/african-icon.gif" alt="african food icon"></a>
                    </div>
                    <div>
                        <h2>American</h2>
                        <a href="/cuisine/american"><img src="/image/american-icon.gif" alt="american food icon"></a>
                    </div>
                    <div>
                        <h2>Asian</h2>
                        <a href="/cuisine/asian"><img src="/image/asian-icon.gif" alt="asian food icon"></a>
                    </div>
                    <div>
                        <h2>Mexican</h2>
                        <a href="/cuisine/mexican"><img src="/image/mexican-icon.gif" alt="mexican food icon"></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
  

    <section id="cuisine">
        <h1><%= type %> Recipes</h1>
        <div class="cuisine-container">
            <ul>
                <% recipes.forEach(recipe => { %>
                    <li class="recipe-item">
                        <div class="image-container">
                            <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
                            <div class="cusine-overlay">
                                <form action="/recipeInfo/<%= recipe.id %>" method="GET">
                                    <button class="view-recipe-btn" data-recipe-id="<%= recipe.id %>">View Recipe</button>
                                </form>
                            </div>
                        </div>
                        <h2><%= recipe.title %></h2>
                    </li>
                <% }) %>
            </ul>
        </div>
    </section>

    <div id="recipeInfoContent"></div>

   
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <!-- Custom JS -->
   <script src="js/main.js"></script>
</body>
</html>