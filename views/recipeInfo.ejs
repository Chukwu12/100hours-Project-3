<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.title %></title>
    <!-- Font-awesome -->
    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
    <!-- Glide.js CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
     <!-- bootstrap -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Custom CSS -->
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header id="main-nav">
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <a class="navbar-brand" href="/" aria-label="Homepage">
                <img src="/image/onice-logo.png" alt="Onice Logo" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/recipe">Recipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/createRecipes">Create Recipes</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="search-bar">
        <div class="row">
            <input type="text" id="input-box" placeholder="Search Recipes" autocomplete="off">
            <button id="search-button" aria-label="Search Recipes">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
        <div id="suggestions" class="suggestions-box"></div> <!-- Suggestions box -->
    </div>

    <header>
        <nav id="cuisenes">
            <div class="cuisenes">
                <div class="cuisnes-list">
                    <div>
                        <h2>African</h2>
                        <a href="/cuisine/african"><img src="/image/african-icon.gif" alt="african food icon"></a>
                    </div>
                    <div>
                        <h2>American</h2>
                        <a href="/cuisine/american"><img src="/image/american-icon.gif" alt="american food icon"></a>
                    </div>
                    <div>
                        <h2>Asian</h2>
                        <a href="/cuisine/asian"><img src="/image/asian-icon.gif" alt="asian food icon"></a>
                    </div>
                    <div>
                        <h2>Mexican</h2>
                        <a href="/cuisine/mexican"><img src="/image/mexican-icon.gif" alt="mexican food icon"></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>




    <section id="recipeInfo">  
        <div class="recipeInfo-container">
            <header class="recipe-header">
                <h1><%= recipe.title %></h1>
                <figure>
                    <img src="<%= recipe.image %>" alt="<%= recipe.title %>" loading="lazy">
                </figure>
            </header>
            <div class="recipe-details">
                <!-- <div class="instruction-icons">
                    <p><i class="fa-regular fa-user"></i><strong>Servings:</strong> <%= recipe.servings %></p>
                        <p><i class="fa-solid fa-clock"></i><strong>Ready in:</strong> <%= recipe.readyInMinutes %> minutes</p>
                </div> -->
                    <ul class="ingredients">
                        <h2>Ingredients</h2>
                        <% recipe.ingredients.forEach(ingredient => { %>
                            <li>
                                <img src="/image/cooking-list-icon.png" alt="<%= ingredient.name %>">
                                <%= ingredient.amount %> <%= ingredient.unit %> of <%= ingredient.name %>
                        <% }); %>
                    </ul>
                   
                    <div class="directions">
                        <h2>Instructions</h2>
                        <ol>
                            <% recipe.instructions.split("\n").forEach(function(step) { %>
                                <li><%- step %></li>
                            <% }); %>
                        </ol>   
                    </div>                    
                </div>     
        </div>
        <a href="/api">Back to Recipes</a>            
            </div>
        
    </section>



     <!-- Glide.js -->
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/glide.min.js"></script>
    <!-- Initialize Glide -->
    <script>
        new Glide('.glide', {
            type: 'carousel',
            startAt: 0,
            perView: 3,
            gap: 20
        }).mount();

       
    </script>
    
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Custom JS -->
  <script src="js/main.js"></script>
</body>
</html>
