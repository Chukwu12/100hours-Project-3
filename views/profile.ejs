<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= recipe.title %></title>
    <!-- Font-awesome -->
    <script src="https://kit.fontawesome.com/bb1892d46f.js" crossorigin="anonymous"></script>
    <!-- Glide.js CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
     <!-- bootstrap -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Custom CSS -->
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <img src="/image/onice-logo.png" alt="logo-img">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/recipe">Recipes</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/create-recipes">Create Recipes</a></li>
          
        </ul>
    </nav>

    <div class="search-bar">
        <div class="row">
            <input type="text" id="input-box" placeholder="Search Recipes" autocomplete="off">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <div id="suggestions" class="suggestions-box"></div> <!-- Suggestions box -->
    </div>

    <header>
        <nav id="cuisenes">
            <div class="cuisenes">
                <div class="cuisnes-list">
                    <div>
                        <h2>African</h2>
                        <a href="/cuisine/african"><img src="/image/african-icon.gif" alt="african food icon"></a>
                    </div>
                    <div>
                        <h2>American</h2>
                        <a href="/cuisine/american"><img src="/image/american-icon.gif" alt="american food icon"></a>
                    </div>
                    <div>
                        <h2>Asian</h2>
                        <a href="/cuisine/asian"><img src="/image/asian-icon.gif" alt="asian food icon"></a>
                    </div>
                    <div>
                        <h2>Mexican</h2>
                        <a href="/cuisine/mexican"><img src="/image/mexican-icon.gif" alt="mexican food icon"></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
 
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a post</h2>
            <form action="/recipe/createRecipe" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                <label for="ingredients" class="form-label">Ingredients</label>
                <textarea class="form-control" id="ingredients" name="ingredients"></textarea>
              </div>
              <div class="mb-3">
                <label for="directions" class="form-label">Directions</label>
                <textarea class="form-control" id="directions" name="directions"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<recipes.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/recipe/<%= recipes[i]._id%>">
              <h2><%= recipes[i].name%></h2>
              <img class="img-fluid" src="<%= recipes[i].image%>">
              <p><%= recipes[i].ingredients%></p>
              <p><%= recipes[i].directions%></p>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div> 

  <div class="favorite-container">
    <div class="col-6">
      <ul class="row list-unstyled">
      <% for(var i=0; i<recipes.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/recipe/<%= recipes[i].recipe._id%>">
            <h2><%= recipes[i].recipe.name%></h2>
            <img class="img-fluid" src="<%= recipes[i].recipe.image%>">
            <p><%= recipes[i].recipe.ingredients%></p>
            <p><%= recipes[i].recipe.directions%></p>
          </a>
        </li>
      <% } %>
      </ul>
      <div class="row justify-content-center mt-5">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>  
    </div>  
  </div>
</div>
</div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <!-- Custom JS -->
  <script src="js/main.js"></script>
</body>
</html>